[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[user]
	name = AndriusK
	email = akrisiun@gmail.com
[alias]
    s = status
    com = commit
    ch = checkout
    lms = !git local-master-sync-check
#    current-branch= !git branch | grep '*' | cut -d ' ' -f 2
    di = diff
    dc = diff --cached
    amend = commit --amend
    aall = add --all
    head = !git l -1
    h = !git head
    hp = "!show_git_head"
    r = !git l -30
    ra = !git r --all
    ff = merge --ff-only
    pullff = pull --ff-only
    noff = merge --no-ff
    l = "!pretty_git_log"
    la = !git l --all
    ls = ls-files
[push]
	default = simple
[color]
	ui = auto
[color "branch"]
	current = yellow bold
	master = green bold
	local = green bold
	remote = cyan bold	
[core]
	excludesfile = /Users/andriusk/.gitignore_global
	autocrlf = False
	editor = \"code" fileeditor
#	editor = \"/Users/andriusk/vm/GitExtensions/GitExtensions.exe\" fileeditor
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[branch]
	autosetuprebase = never
[merge]
	tool = kdiff3
[credential]
	helper = cache
[diff]
	guitool = kdiff3
